<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layoutContainer"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:id="@+id/titleText"
        android:drawableLeft="@drawable/ticket"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:paddingRight="16sp"
        android:paddingLeft="16sp"
        android:layout_above="@+id/linkText"/>
    <TextView
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textStyle="italic"
        android:background="#FFFFFF"
        android:textAlignment="textStart"
        android:id="@+id/overviewText"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_above="@+id/taglineText"
        android:padding="16sp"
        android:drawableLeft="@drawable/film"
        android:drawablePadding="8sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link"
        android:drawableLeft="@drawable/language"
        android:background="#FFFFFF"
        android:gravity="center"
        android:id="@+id/linkText"
        android:autoLink="web"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_above="@+id/overviewText"
        android:padding="16sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAGLINE"
        android:background="#FFFFFF"
        android:textColor="#0000FF"
        android:textSize="25sp"
        android:id="@+id/taglineText"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_alignParentBottom="true"
        android:padding="16sp"/>
</RelativeLayout>